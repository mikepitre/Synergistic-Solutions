<p id="notice"><%= notice %></p>

<h1>Listing Employees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.company.name %></td>
        <td><%= employee.location %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if params[:page].to_i > 1 %>
  <%= link_to "Prev Page", employees_path({ page: params[:page].to_i - 1 }) %>
<% end %>
<%= link_to "Next Page",   employees_path({ page: params.fetch(:page, 1).to_i + 1 }) %>

<%= link_to 'New Employee', new_employee_path %>
